<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/circle"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="53dp"
        android:background="@drawable/round"
        android:elevation="8dp"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/circle"
        android:tint="#969696"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/triangle"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/round"
        android:elevation="8dp"
        android:padding="11dp"
        android:scaleType="fitCenter"
        android:src="@drawable/triangle"
        android:tint="#969696"
        app:layout_constraintBottom_toTopOf="@+id/circle"
        app:layout_constraintEnd_toStartOf="@+id/circle" />

    <ImageButton
        android:id="@+id/square"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/round"
        android:elevation="8dp"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/square"
        android:tint="#969696"
        app:layout_constraintEnd_toStartOf="@+id/triangle"
        app:layout_constraintTop_toTopOf="@+id/circle" />

    <ImageButton
        android:id="@+id/cross"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/round"
        android:elevation="8dp"
        android:padding="11dp"
        android:scaleType="fitCenter"
        android:src="@drawable/x_button"
        android:tint="#969696"
        app:layout_constraintEnd_toStartOf="@+id/circle"
        app:layout_constraintTop_toBottomOf="@+id/circle" />

    <ImageButton
        android:id="@+id/up_arrow"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/round"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_up"
        android:tint="#969696"
        app:layout_constraintBottom_toTopOf="@+id/left_arrow"
        app:layout_constraintStart_toEndOf="@+id/left_arrow" />

    <ImageButton
        android:id="@+id/left_arrow"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="53dp"
        android:background="@drawable/round"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/left_arrow"
        android:tint="#969696"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/right_arrow"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/round"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_right"
        android:tint="#969696"
        app:layout_constraintStart_toEndOf="@+id/up_arrow"
        app:layout_constraintTop_toTopOf="@+id/left_arrow" />

    <ImageButton
        android:id="@+id/down_arrow"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/round"
        android:elevation="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_down"
        android:tint="#969696"
        app:layout_constraintStart_toEndOf="@+id/left_arrow"
        app:layout_constraintTop_toBottomOf="@+id/left_arrow" />
</androidx.constraintlayout.widget.ConstraintLayout>